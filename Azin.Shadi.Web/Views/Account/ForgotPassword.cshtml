@using Azin.Shadi.Core.DTOs;
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

@section MetaTag{

    <meta name=description content="فروشگاه تولد آذین - اگه رمز عبورتو فراموش کردی که غصه نداره ما توی این صفحه بهت کمک میکنیم">
    <meta name=googlebot content=index,follow>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="" />

    <meta property=og:site_name value="فروشگاه تولد آذین">
    <meta property=og:title content="صفحه بازیابی کلمه عبور">
    <meta property=og:url content="https://Azinshadi.ir/Login" />
    <meta property=og:image content="~/images/logo.png">
    <meta property=og:image:url content="~/images/logo.png" />
    <meta property=og:image:width content="500">

    <meta property=og:image:type content="image/jpg">
    <meta property=og:description content="فروشگاه تولد آذین -صفحه بازیابی کلمه عبور ">
    <meta property=og:price:currency content="IRR">
    <meta property=og:locale content="ir_FA">
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">فروشگاه تولد آذین</a></li>
        <li class="breadcrumb-item active" aria-current="page">بازیابی کلمه عبور</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p class="help-block">ایمیل بازیابی کلمه عبور برای شما ارسال شد</p>
            </div>
        }
        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">

            <form asp-action="ForgotPassword" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">

                </div>
                <span asp-validation-for="Email"></span>


                <button class="btn btn-success"> تایید و ارسال </button>

            </form>
        </div>

    </div>
</main>