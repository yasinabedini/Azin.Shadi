@model Azin.Shadi.Core.DTOs.UserRegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

@section MetaTag{

    <meta name=description content="فروشگاه تولد آذین - پنل ثبت نام - با چند کلیک ساده توی سایت آذین ثبت نام کن و جشن تولد خودتو زیبا کن">
    <meta name=googlebot content=index,follow>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="" />

    <meta property=og:site_name value="فروشگاه تولد آذین">
    <meta property=og:title content="صفحه ثبت نام به سایت فروشگاهی آذین">
    <meta property=og:url content="https://Azinshadi.ir/Login" />
    <meta property=og:image content="~/images/logo.png">
    <meta property=og:image:url content="~/images/logo.png" />
    <meta property=og:image:width content="500">

    <meta property=og:image:type content="image/jpg">
    <meta property=og:description content="فروشگاه تولد آذین -ثبت نام در آذین ">
    <meta property=og:price:currency content="IRR">
    <meta property=og:locale content="ir_FA">
}


<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">فروشگاه تولد آذین</a></li>
        <li class="breadcrumb-item active" aria-current="page">عضویت در سایت</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">

        <header><h2> عضویت در سایت </h2></header>

        <div class="form-layer">

            <form asp-action="Register" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="نام و نام خانوادگی" aria-describedby="username">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور " aria-describedby="password">
                </div>

                <div class="link">
                    <a href="/Login"> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <button class="btn btn-success"> عضویت در سایت </button>

            </form>
        </div>

    </div>
</main>