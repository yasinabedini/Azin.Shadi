@page
@model Azin.Shadi.Web.Pages.Admin.ProductGroup.IndexModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دسته بندی محصولات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دسته بندی محصولات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row ">
                            <div class="col-md-12">
                                <a class="btn btn-outline btn-success mt-2 mb-2" style="margin:10px 0 !important;" href="/admin/productGroup/create">افزودن دسته بندی جدید</a>
                                <div />
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>نام دسته بندی</th>
                                        <th>تعداد محصولات</th>
                                        <th>دسته بندی اصلی</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var productGroups in Model.ProductGroups)
                                    {
                                        <tr>
                                            <td>@productGroups.Title</td>
                                            <td class="text-center">
                                                @if (productGroups.ParentId==null)
                                                {
                                                    <p>---</p>
                                                }
                                                else
                                                {
                                                    <p>@productGroups.Products.Count()</p>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (productGroups.ParentId == null)
                                                {
                                                    <i class="bi bi-check2 text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-lg text-danger"></i>
                                                }
                                            </td>
                                            <td>
                                                <a asp-page="Edit" asp-route-id="@productGroups.Id" class="btn btn-warning">ویرایش</a>
                                                <a class="btn btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
