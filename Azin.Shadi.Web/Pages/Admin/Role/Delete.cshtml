@page "{id}"
@model Azin.Shadi.Web.Pages.Admin.Role.DeleteModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف نقش (@Model.Role.Title)</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" asp-page="Delete" >
        <input type="hidden" asp-for="Role.RoleId" />
        <input type="hidden" asp-for="Role.Title" />
        <div class="col-md-8">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    اطلاعات نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label class="test-bold">نام کاربری : </label>
                        <label class="fw-bold">@Model.Role.Title</label>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    آیا از حذف نقش مطمئن هستید ؟
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <input class="btn btn-danger" type="submit" value="حذف نقش (@Model.Role.Title)" />
                        <a asp-page="index" class="btn btn-warning">انصراف</a>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>