@page
@model Azin.Shadi.Web.Pages.Admin.Role.IndexModel
@{
    ViewData["Title"] = "لیست نقش ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row ">
                            <div class="col-md-12">
                                <a class="btn btn-outline btn-success mt-2 mb-2" style="margin:10px 0 !important;" href="/admin/role/create">افزودن نقش جدید</a>
                                <div />
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>ایدی</th>
                                        <th>عنوان نقش</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <tr>
                                            <td>@role.RoleId</td>
                                            <td>@role.Title</td>
                                            <td>
                                                <a asp-page="Edit" asp-route-id="@role.RoleId" class="btn btn-warning">ویرایش</a>
                                                <a asp-page="Delete" asp-route-id="@role.RoleId" class="btn btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table><div class="row text-center">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
