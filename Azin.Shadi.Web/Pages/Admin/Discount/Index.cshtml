@page
@using Azin.Shadi.Core.Convertors;
@model Azin.Shadi.Web.Pages.Admin.Discount.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست تخفیف ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست تخفیف ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row ">
                            <div class="col-md-12">
                                <a class="btn btn-outline btn-success mt-2 mb-2" style="margin:10px 0 !important;" href="/admin/discount/create">افزودن تخفیف جدید</a>
                                <div />
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>ایدی</th>
                                        <th>کد تخفیف</th>
                                        <th>درصد تخفیف</th>
                                        <th>کاربران قابل استفاده</th>
                                        <th>تاریخ شروع</th>
                                        <th>تاریخ پایان</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var discount in Model.Discounts)
                                    {
                                        <tr>
                                            <td>@discount.Id</td>
                                            <td>@discount.DiscountCode</td>
                                            <td>@discount.DiscountPercent</td>
                                            <td>@discount.UsableCount</td>
                                            <td>@((@discount.StartDate.HasValue)?discount.StartDate.Value.ToShamsi():"")</td>
                                            <td>@((@discount.EndDate.HasValue) ? discount.EndDate.Value.ToShamsi() : "")</td>
                                            <td>
                                                <a asp-page="Edit" asp-route-id="@discount.Id" class="btn btn-warning">ویرایش</a>
                                                <a asp-page="Delete" asp-route-id="@discount.Id" class="btn btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table><div class="row text-center">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
