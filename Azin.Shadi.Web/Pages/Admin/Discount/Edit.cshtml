@page "{id}"
@using Azin.Shadi.Core.Convertors;
@model Azin.Shadi.Web.Pages.Admin.Discount.EditModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش تخفیف</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" asp-page="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Discount.Id" />
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    اطلاعات تخفیف
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>کد تخفیف </label>
                        <input type="hidden" asp-for="Discount.DiscountCode">
                        <input disabled type="text" asp-for="Discount.DiscountCode" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>درصد تخفیف</label>
                        <input type="number" max="100" asp-for="Discount.DiscountPercent" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>تعداد کاربران قابل استفاده </label>
                        <input type="text" asp-for="Discount.UsableCount" placeholder="میتوانید این فیلد را خالی بگذارید" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>تاریخ شروع تخفیف </label>
                        <input id="stDate" value="@((Model.Discount.StartDate.HasValue)?Model.Discount.StartDate.Value.ToShamsi():"")" name="stDate" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label>تاریخ اتمام تخفیف </label>
                        <input id="edDate" value="@((Model.Discount.EndDate.HasValue)?Model.Discount.EndDate.Value.ToShamsi():"")" name="edDate" class="form-control" />
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </form>
</div>

@section Scripts{

    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="/js/kendo.all.min.js"></script>
    <script>
        // create DatePicker from input HTML element
        $("#stDate").kendoDatePicker();
        $("#edDate").kendoDatePicker();
    </script>
}