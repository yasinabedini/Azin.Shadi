@page "{id}"
@model Azin.Shadi.Web.Pages.Admin.Order.SendOrderModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ارسال سفارش</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <input type="hidden" asp-for="Order.Id"/>        
                                   
            <div class="panel panel-success">
                <div class="panel-heading">
                    <p>ارسال سفارش</p>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group ">
                        <label>آدرس : </label>
                        <p>@Model.Order.Forward.Address</p>
                    </div>
                    <div class="form-group ">
                        <label>کد رهگیری پستی : </label>
                        <input type="text" class="form-control" placeholder="لطفا کد دریافتی از پست را ثبت کنید" name="trackingCode" />
                    </div>
                    <div class="form-group ">
                        <input type="submit" class="btn btn-success" value="ارسال سفارش" />                        
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </form>
    </div>
</div>

